<%- include('partials/header'); %>
<body>
    <%- include('partials/navbar'); %>
    <div class="container p-4">
        <div class="card shadow">
            <div class="card-header">
                <h3 class="d-flex justify-content-center p-3">Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/perguntar">
                    <label class="font-weight-bold">Título</label>
                    <input type="text" placeholder="Escreva sua pergunta aqui..." class="form-control" name="titulo" required>
                    <label class="mt-3 font-weight-bold">Descrição</label>
                    <textarea placeholder="Descreva seu problema..." class="form-control" name="descricao" required></textarea>
                        <button class="btn btn-success mt-4">Enviar</button>
                        <a href="/" class="btn btn-primary mt-4">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</body>
